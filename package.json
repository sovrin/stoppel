{
  "name": "stoppel",
  "version": "0.1.0",
  "description": "umpteenth templating engine",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "watch": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:types": "attw --pack .",
    "coverage": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sovrin/stoppel.git"
  },
  "author": {
    "name": "Oleg Kamlowski",
    "email": "oleg.kamlowski@thomann.de"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sovrin/stoppel/issues"
  },
  "homepage": "https://github.com/sovrin/stoppel#readme",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18",
    "@types/node": "^24.10.1",
    "@vitest/coverage-istanbul": "^4.0.13",
    "prettier": "^3.6.2",
    "tsdown": "^0.16.6",
    "tsx": "^4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13"
  }
}
